<% var deleteLink = consultation.id + '?_method=DELETE' %>
<div class="container">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title">Consultation Details</h3>
      <div class="">
        <div class="btn-group" role="group">
          <form class="" action="edit" method="GET">
          <button type="submit" name="id" value="<%- consultation.id %>" name="id" class="btn btn-default" aria-label="Left Align" name="id">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit
          </button>
        </form>
        </div>
        <div class="btn-group" role="group">
          <form class="" action="<%- deleteLink %>" method="POST">
          <button type="submit" name="id" value="<%- consultation.id %>" class="btn btn-default" aria-label="Left Align" name="id">
            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Delete
          </button>
        </form>
        </div>
      </div>
    </div>
    <div class="panel-body">
      <dl class="dl-horizontal">
        <% thead.forEach((item, index) => { %>
          <% if (item === 'patient') { %>
            <dt><%- item %></dt>
            <dd><%- consultation[item].fullName %></dd>
          <% } else if (item === 'prescription'){ %>
            <dt><%- item %></dt>
            <% consultation[item].forEach((med) => { %>
                <dd><li><%- med.medicine.name + ', ' + med.amount + ' ' + med.unit %></li></dd>
            <% })
          } else { %>
            <dt><%- item %></dt>
            <dd><%- consultation[item] %></dd>
          <% }
       }) %>
      </dl>
    </div>
  </div>
</div>
