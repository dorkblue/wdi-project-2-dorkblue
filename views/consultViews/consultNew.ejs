<%
function display (){
  console.log('errMsg', errMsg)
  if (!errMsg.length) {
    return 'none'
  } else {
    return ''
  }
}

var alertDisplay = 'display: ' + display ()
%>
<div class="container">
  <h1>New Consultation for <a href="<%-'../patient/' + patient.id %>"><%- patient.fullName %></a></h1>
  <div class="alert alert-danger" role="alert" style="<%- alertDisplay %>">
    <%
    if (errMsg.length) {
      errMsg.forEach( (msg) => { %>
        <div><%- msg %></div>
        <% })
      }
    %>
  </div>
  <div class="col-md-6">
    <form action="<%- '/clinic/consultation?id=' + patient.id %>" method="POST">
      <div class="form-group">
        <label for="radio">Attending Doctor</label>
        <div class="radio">
          <label>
            <input type="radio" name="attending doctor" value="Doctor Geller">
            Doctor Geller
          </label>
        </div>
        <div class="radio">
          <label>
            <input type="radio" name="attending doctor" value="Doctor X">
            Doctor X
          </label>
        </div>
      </div>
      <div class="form-group">
        <label for="date">Date</label>
        <input type="date" class="form-control" id="date" name="date">
      </div>
      <div class="form-group">
        <label for="comments">Comments</label>
        <textarea class="form-control" rows="3" id="comments" name="comments" placeholder="Enter consultation details and comments here"></textarea>
      </div>
      <div class="form-group">
        <label for="medicine">Prescription</label>
        <div class="form-inline">
          <div class="form-group">
            <select name="medicine" class="form-control">
              <%
              med.forEach((item) => {
              %>
                <option value="<%- item.id %>"><%- item.name %></option>
              <%
              })
              %>
            </select>
          </div>
          <div class="form-group">
            <input type="text" name="amount" placeholder="amount" class="form-control">
          </div>
          <div class="form-group">
            <select name="unit" class="form-control" value="">
              <option>mg</option>
              <option>ml</option>
              <option>gm</option>
            </select>
          </div>
          <div class="form-group">
            <button type="button" class="btn btn-default" aria-label="Left Align">
              <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            </button>
          </div>
        </div>
        <div class="form-inline">
          <div class="form-group">
            <select name="medicine" class="form-control">
              <%
              med.forEach((item) => {
              %>
                <option value="<%- item.id %>"><%- item.name %></option>
              <%
              })
              %>
            </select>
          </div>
          <div class="form-group">
            <input type="text" name="amount" placeholder="amount" class="form-control">
          </div>
          <div class="form-group">
            <select name="unit" class="form-control">
              <option>mg</option>
              <option>ml</option>
              <option>gm</option>
            </select>
          </div>
          <div class="form-group">
            <button type="button" class="btn btn-default" aria-label="Left Align">
              <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            </button>
          </div>
        </div>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-default">Add Consultation</button>
      </div>
    </form>
  </div>
</div>
