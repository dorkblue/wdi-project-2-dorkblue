<%
function display (){
  console.log('errMsg', errMsg)
  if (!errMsg.length) {
    return 'none'
  } else {
    return ''
  }
}

var alertDisplay = 'display: ' + display ()
%>

<div class="container">
  <h1>New Consultation for <a href="<%-'../patient/' + patient.id %>"><%- patient.fullName %></a></h1>
  <div class="alert alert-danger" role="alert" style="<%- alertDisplay %>">
    <%
    if (errMsg.length) {
      errMsg.forEach( (msg) => { %>
        <div><%- msg %></div>
        <% })
      }
    %>
  </div>
  <div class="col-md-6">
    <form action="<%- '/clinic/consultation?id=' + patient.id %>" method="POST">
      <div class="form-group">
        <label for="radio">Attending Doctor</label>
        <div class="radio">
          <label>
            <input type="radio" name="attending doctor" value="Doctor Geller">
            Doctor Geller
          </label>
        </div>
        <div class="radio">
          <label>
            <input type="radio" name="attending doctor" value="Doctor X">
            Doctor X
          </label>
        </div>
      </div>
      <div class="form-group">
        <label for="date">Date</label>
        <input type="date" class="form-control" id="date" name="date">
      </div>
      <div class="form-group">
        <label for="comments">Comments</label>
        <textarea class="form-control" rows="3" id="comments" name="comments" placeholder="Enter consultation details and comments here"></textarea>
      </div>
      <button type="submit" class="btn btn-default">Add Consultation</button>
    </form>
  </div>
</div>
