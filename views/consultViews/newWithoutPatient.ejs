<%
function display (){
  console.log('errMsg', errMsg)
  if (!errMsg.length) {
    return 'none'
  } else {
    return ''
  }
}

var alertDisplay = 'display: ' + display ()
%>
<div class="container">
  <form action="<%- '/consultation' %>" method="POST">
  <div class="alert alert-danger" role="alert" style="<%- alertDisplay %>">
    <%
    if (errMsg.length) {
      errMsg.forEach( (msg) => { %>
        <div><%- msg %></div>
        <% })
      }
    %>
  </div>
  <h1>New Consultation</h1>
  <div class="panel panel-primary">
    <div class="panel-heading"></div>
    <div class="panel-body">
      <div class="col-md-6">
          <div class="form-group">
            <label for="autocomplete">Patient</label>
            <input type="text" id="autocomplete-consult" name="patient" class="form-control" placeholder="Search patient">
          </div>
          <div class="form-group">
            <label for="radio">Attending Doctor</label>
            <div class="radio">
              <label>
                <input type="radio" name="attending doctor" value="Doctor Geller">
                Doctor Geller
              </label>
            </div>
            <div class="radio">
              <label>
                <input type="radio" name="attending doctor" value="Doctor X">
                Doctor X
              </label>
            </div>
          </div>
          <div class="form-group">
            <label for="date">Date</label>
            <input type="date" class="form-control" id="date" name="date">
          </div>
          <div class="form-group">
            <label for="comments">Comments</label>
            <textarea class="form-control" rows="3" id="comments" name="comments" placeholder="Enter consultation details and comments here"></textarea>
          </div>

          <div class="form-group all-med">
            <label for="medicine">Prescription</label>
            <div class="form-group med-group">
              <div class="form-inline">
                <div class="form-group">
                  <select name="medicine" class="form-control">
                    <option></option>
                    <%
                    med.forEach((item) => {
                      %>
                      <option value="<%- item.id %>"><%- item.name %></option>
                      <%
                    })
                    %>
                  </select>
                </div>
                <div class="form-group">
                  <input type="text" name="amount" placeholder="amount" class="form-control">
                </div>
                <div class="form-group">
                  <select name="unit" class="form-control" value="">
                    <option>mg</option>
                    <option>ml</option>
                    <option>gm</option>
                  </select>
                </div>
                <div class="form-group delete-button">
                  <button type="button" class="btn btn-default" aria-label="Left Align">
                    <span class="glyphicon glyphicon-minus" aria-hidden="true"></span>
                  </button>
                </div>
                <div class="form-group add-button">
                  <button type="button" class="btn btn-default" aria-label="Left Align">
                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                  </button>
                </div>
              </div>
            </div>
          </div>
      </div>
    </div>
    <div class="panel-footer">
      <div class="btn-group" role="group">
        <button type="submit" class="btn btn-default" aria-label="Left Align">
          <span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span> Save
        </button>
      </div>
    </div>
  </div>
</form>
</div>
