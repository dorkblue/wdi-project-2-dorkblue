<% var editLink = consultation.id + '?_method=PUT' %>
<div class="container">
  <pre>
    <%- consultation.date %>
  </pre>
  <h1>Edit Consultation for <a href="<%-'../patient/' + consultation.patient.id %>"><%- consultation.patient.fullName %></a></h1>
  <div class="col-md-6">
    <form action="<%- editLink %>" method="POST">
      <div class="form-group">
        <label for="radio">Attending Doctor</label>
        <div class="radio">
          <label>
            <input type="radio" name="attending doctor" value="Doctor Geller" checked>
            Doctor Geller
          </label>
        </div>
        <div class="radio">
          <label>
            <input type="radio" name="attending doctor" value="Doctor X">
            Doctor X
          </label>
        </div>
      </div>
      <div class="form-group">
        <label for="date">Date</label>
        <input type="date" class="form-control" id="date" name="date" value=<%- consultation.date %>>
      </div>
      <div class="form-group">
        <label for="comments">Comments</label>
        <textarea class="form-control" rows="3" id="comments" name="comments" placeholder="Enter consultation details and comments here"><%- consultation.comments %></textarea>
      </div>
      <div class="form-group">
        <label for="medicine">Prescription</label>
        <div class="form-inline">
          <div class="form-group">
            <select name="medicine" class="form-control">
              <%
              med.forEach((item) => {
              %>
                <option value="<%- item.id %>"><%- item.name %></option>
              <%
              })
              %>
            </select>
          </div>
          <div class="form-group">
            <input type="text" name="amount" placeholder="amount" class="form-control">
          </div>
          <div class="form-group">
            <select name="unit" class="form-control" value="">
              <option>mg</option>
              <option>ml</option>
              <option>gm</option>
            </select>
          </div>
          <div class="form-group">
            <button type="button" class="btn btn-default" aria-label="Left Align">
              <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            </button>
          </div>
        </div>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-default">Confirm Edit</button>
      </div>
    </form>
  </div>
</div>
