<%
function display (){
  console.log('errMsg', errMsg)
  if (!errMsg.length) {
    return 'none'
  } else {
    return ''
  }
}

var alertDisplay = 'display: ' + display ()
%>

<div class="container">
  <h1>New Medicine to be Added</h1>
  <div class="alert alert-danger" role="alert" style="<%- alertDisplay %>">
    <%
    if (errMsg.length) {
      errMsg.forEach( (msg) => { %>
        <div><%- msg %></div>
        <% })
      }
    %>
  </div>
  <div class="col-md-6">
    <form action="<%- '/clinic/medicine' %>" method="POST">
      <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" name="name">
      </div>
      <div class="form-group">
        <label for="supplier">Supplier</label>
        <input type="text" class="form-control" id="supplier" name="supplier">
      </div>
      <div class="form-group">
        <label for="inventory">Inventory</label>
        <input type="number" class="form-control" id="inventory" name="inventory">
      </div>
      <div class="form-group">
        <label for="unit">Unit</label>
        <input type="text" class="form-control" id="unit" name="unit">
      </div>
      <button type="submit" class="btn btn-default">Add Medicine</button>
    </form>
  </div>
</div>
