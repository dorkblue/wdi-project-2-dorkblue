<div class="container">
  <h1>Medication List</h1>
  <table class="table table-striped table-hover list">
    <thead>
      <tr>
        <% thead.forEach((item, index) => {
          if(index === 0) { %>
          <% } %>
          <th><%- item.toUpperCase() %></th>
        <% }) %>
      </tr>
    </thead>
    <tbody>
      <% if (med.length > 0) {
        med.forEach((item) => { %>
          <tr id=<%- 'medicine/' + item['id']%>>
            <td><a href="<%= 'medicine/' + item.id %>"><%= item.name %></a></td>
            <td><%= item.supplier %></td>
            <td><%= item.inventory %></td>
            <td><%= item.unit %></td>
          </tr>
        <% })
      } else { %>
        <tr>
          <div class="alert alert-danger" role="alert">
            Medicine data not found
          </div>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>
