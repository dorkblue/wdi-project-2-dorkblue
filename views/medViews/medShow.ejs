<% var deleteLink = med.id + '?_method=DELETE' %>
<div class="container">
  <h3>Medication Details</h3>
  <div class="panel panel-primary">
    <div class="panel-heading"></div>
    <div class="panel-body">
      <dl class="dl-horizontal">
        <% thead.forEach((item, index) => { %>
            <dt><%- item %></dt>
            <dd><%- med[item] %></dd>
       <% }) %>
      </dl>
    </div>
    <div class="panel-footer">
      <div class="">
        <div class="btn-group" role="group">
          <form class="" action="edit" method="GET">
          <button type="submit" name="id" value="<%- med.id %>" name="id" class="btn btn-default" aria-label="Left Align" name="id">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit
          </button>
        </form>
        </div>
        <div class="btn-group" role="group">
          <form class="" action="<%- deleteLink %>" method="POST">
          <button type="submit" name="id" value="<%- med.id %>" class="btn btn-default" aria-label="Left Align" name="id">
            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Delete
          </button>
        </form>
        </div>
      </div>
    </div>
  </div>
</div>
